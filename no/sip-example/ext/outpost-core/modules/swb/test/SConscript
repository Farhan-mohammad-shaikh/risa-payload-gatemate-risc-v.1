import os
# should be the same name as the ../src library
module = 'outpost_' + os.path.basename(os.path.abspath('../'))

Import('envGlobal')

### == STUB LIBRARY ==

includepaths = [os.path.abspath('.')]

lib_deps = [
    module,
    # 'outpost_time',
    # 'outpost_support',
    # 'outpost_utils',
    # 'outpost_rtos',
    # 'outpost_smpc',
]
lib_files = envGlobal.RecursiveGlob('.cpp', searchdir = 'unittest')

envGlobal.RegisterLibrary(module + '_stubs', lib_files,
                          includepaths = includepaths, dependencies = lib_deps)

### == UNIT TEST ==

unittest_deps = [
    module,
    module + '_stubs',
    'outpost_base_stubs',   # harness
    'outpost_time_stubs',   # testing_clock
    'googletest-local'
]

files = envGlobal.RecursiveGlob('.cpp', searchdir = 'outpost')
files += [envGlobal.File('main.cpp')]

envGlobal.RegisterTest(module, files, unittest_deps)
